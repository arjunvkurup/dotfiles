# keybindings for system controls such as sleep, hibernate, poweroff and reboot
bindsym $mod+Control+s exec systemctl sleep
bindsym $mod+Control+h exec systemctl hibernate
bindsym $mod+Control+p exec systemctl poweroff
bindsym $mod+Control+r exec systemctl reboot

